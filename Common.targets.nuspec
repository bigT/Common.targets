<package>
  <metadata minClientVersion="2.7">
    <id>Common.targets</id>
    <title>Common Solution Targets</title>
    <version>1.0</version>
    <authors>Taras Alenin</authors>
    <owners>Taras Alenin</owners>
    <licenseUrl>https://github.com/bigT/Common.props/blob/master/license.txt</licenseUrl>
